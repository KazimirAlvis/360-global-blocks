{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "global360blocks/latest-articles",
	"version": "0.1.0",
	"title": "Latest Articles",
	"category": "360-blocks",
	"icon": "list-view",
	"description": "Display the latest blog posts in a grid layout with images and excerpts.",
	"attributes": {
		"numberOfPosts": {
			"type": "number",
			"default": 3
		},
		"showExcerpt": {
			"type": "boolean",
			"default": true
		},
		"excerptLength": {
			"type": "number",
			"default": 20
		},
		"columns": {
			"type": "number",
			"default": 3
		}
	},
	"example": {},
	"supports": {
		"html": false,
		"align": ["wide", "full"]
	},
	"textdomain": "global360blocks",
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css"
}
